<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ab5y.flashcards.HomeActivity">
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btnNewCard"
        android:text="@string/button_new_flash_card"
        android:onClick="btnNewCard_onClick" />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btnNewCard"
        android:id="@+id/btnDisplayFlashcards"
        android:text="@string/button_display_flash_cards"
        android:onClick="btnDisplay_onClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/btnDisplayFlashcards"
        android:text="Create New Stack"
        android:onClick="btnNewStack_onClick"/>

</RelativeLayout>
